<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.setup.SetupFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        android:orientation="vertical"
        android:background="#00BCD4"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        >

    <TextView
        android:id="@+id/labelLayer"
        android:labelFor="@+id/radioGroupLayers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:text="Select YUV layers:"
        tools:ignore="HardcodedText"
        />


    <RadioGroup
        android:id="@+id/radioGroupLayers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tag="Option"
        android:text="Layer selection"
        tools:ignore="HardcodedText">

        <RadioButton
            android:id="@+id/radioLayerY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Y"
            />

        <RadioButton
            android:id="@+id/radioLayerU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Y + U"
            />

        <RadioButton
            android:id="@+id/radioLayerV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Y + V"
            />

    </RadioGroup>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="24dp"
        android:background="#334455"/>





    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:textSize="20sp"
        android:text="Resolution Width x Height:"
        tools:ignore="HardcodedText"
        />

        <Spinner
            android:id="@+id/spinnerOutputSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|center"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/text_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="#FFFFFF"
            android:textSize="11sp"
            style="@style/SpinnerTextViewItem"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|center"
        android:orientation="horizontal"
        android:background="#22BCD4"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        >

        <EditText
            android:id="@+id/editResolutionWidth"
            android:hint="Resolution Width"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:autofillHints=""
            android:ems="16"
            android:padding="17dp"
            android:textAlignment="center"
            android:inputType="number"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:textSize="20sp"
            android:text=" x "
            tools:ignore="HardcodedText"
            />

        <EditText
            android:id="@+id/editResolutionHeight"
            android:hint="Resolution Height"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:autofillHints=""
            android:ems="16"
            android:padding="17dp"
            android:textAlignment="center"
            android:inputType="number"
            />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="24dp"
        android:background="#334455"/>

    <TextView
        android:id="@+id/labelInfoOption"
        android:labelFor="@id/spinnerInfoOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:textSize="20sp"
        android:text="Tech details:"
        tools:ignore="HardcodedText"
        />

    <Spinner
        android:id="@+id/spinnerInfoOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|center"
        android:textAlignment="center"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        />

    <TextView
        android:id="@+id/text_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:textSize="11sp"
         />
    </LinearLayout>
</ScrollView >